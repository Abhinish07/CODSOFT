import random
import string

# length of the password according to the user
password_len = int(input("Enter the length of the password you want:"))

#slecting random value from the string
random_pass = string.ascii_letters + string.digits + string.punctuation

password = []

for i in range(password_len):
    password.append(random.choice(random_pass))
print("The random generated password is :", "".join(password))

